{
    "manifest_version": 3,
    "name": "Chess Helper",
    "version": "0.2.0",
    "icons": {
        "128": "icon128.png"
    },
    "action": {
        "default_title": "Chess Helper"
    },
    "content_scripts": [
        {
            "matches": ["*://*.chess.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "permissions": ["activeTab", "sidePanel"]
}
